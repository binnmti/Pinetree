@page "/play"

@using Pinetree.Client.ViewModels

@rendermode InteractiveAuto

<PageTitle>Playground</PageTitle>
<HeadContent>
    <meta property="og:title" content="Playground" />
    <meta name="twitter:title" content="Playground" />
    <meta name="description" content="Pinetree is a browser-based hierarchical markdown editor. You can try out hierarchical markdown on Playground!" />
    <meta property="og:description" content="Pinetree is a browser-based hierarchical markdown editor. You can try out hierarchical markdown on Playground!" />
    <meta name="twitter:description" content="Pinetree is a browser-based hierarchical markdown editor. You can try out hierarchical markdown on Playground!" />
    <meta property="og:url" content="https://pine-tree.site/play" />
    <link rel="canonical" href="https://pine-tree.site/play" />
</HeadContent>


@if (Pinetree != null)
{
    <Markdown Guid="@(Guid)" Pinetree="@(Pinetree)" IsTry="@(true)" IsProfessional=false FileCount=@FileCount />
}

@code {

    private Guid Guid { get; set; }
    private PinetreeView? Pinetree { get; set; }
    private int FileCount { get; set; }

    protected override void OnInitialized()
    {
        Guid = Guid.NewGuid();
        Pinetree = new PinetreeView(Guid, "Untitled", "", null, Guid, false);
        FileCount = 1;
    }
}
