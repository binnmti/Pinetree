@page "/Tryit"

@using Pinetree.Client.VModel

@rendermode InteractiveAuto

<PageTitle>Tryit</PageTitle>
<HeadContent>
    <meta property="og:title" content="Tryit" />
    <meta property="og:description" content="Try Pinetree" />
    <meta property="og:image" content="Designer.jpeg" />
    <meta property="og:url" content="https://pinetree.azurewebsites.net/Tryit" />
</HeadContent>

@if (Pinetree != null)
{
    <Markdown Guid="@(Guid)" Pinetree="@(Pinetree)" IsTry="@(true)" IsProfessional=false FileCount=@FileCount />
}

@code {
    [Parameter]
    public string UserName { get; set; } = "";

    [Parameter]
    public Guid Guid { get; set; }

    private PinetreeView? Pinetree { get; set; }
    private int FileCount { get; set; }

    protected override void OnInitialized()
    {
        Pinetree = new PinetreeView(default, "Untitled", "", null, default);
        FileCount = 1;
    }
}
