@page "/Pricing"
@using Pinetree.Client.Services
@using Pinetree.Shared.Services
@using Pinetree.Shared.Resources
@inject IJSRuntime JSRuntime
@inject LocalizationService LocalizationService
@rendermode InteractiveAuto
@implements IAsyncDisposable

<PageTitle>@LocalizationService.GetLocalizedString("PageTitle", typeof(PricingResources))</PageTitle>
<HeadContent>
    <meta property="og:title" content="@LocalizationService.GetLocalizedString("PageTitle", typeof(PricingResources))" />
    <meta property="og:description" content="@LocalizationService.GetLocalizedString("PageTitle", typeof(PricingResources))" />
    <meta property="og:image" content="pinetree.png" />
    <meta property="og:url" content="https://pinetree.azurewebsites.net/Pricing" />
</HeadContent>

<h1 class="text-center my-4">@LocalizationService.GetLocalizedString("PageTitle", typeof(PricingResources))</h1>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm h-100">
                <div class="card-header">
                    <h2 class="my-0 font-weight-normal">@LocalizationService.GetLocalizedString("FreePlanTitle", typeof(PricingResources))</h2>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="mt-3">
                        @LocalizationService.GetLocalizedString("FreePlanDescription", typeof(PricingResources))
                    </p>
                    <h3 class="card-title pricing-card-title">@LocalizationService.GetLocalizedString("FreePlanPrice", typeof(PricingResources)) <small class="text-muted">@LocalizationService.GetLocalizedString("PerMonth", typeof(PricingResources))</small></h3>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>@string.Format(LocalizationService.GetLocalizedString("MaximumLevels", typeof(PricingResources)), "3")</li>
                        <li>@string.Format(LocalizationService.GetLocalizedString("MaximumFilesPerLevel", typeof(PricingResources)), "33")</li>
                        <li><s>@string.Format(LocalizationService.GetLocalizedString("MaximumFiles", typeof(PricingResources)), "333")</s></li>
                        <li>@string.Format(LocalizationService.GetLocalizedString("MaximumCharactersPerFile", typeof(PricingResources)), "3333")</li>
                        <li>@string.Format(LocalizationService.GetLocalizedString("MaximumImage", typeof(PricingResources)), "3MB")</li>
                    </ul>
                        <div class="mt-auto">
                        <p class="mt-3">@LocalizationService.GetLocalizedString("FreePlanFooter", typeof(PricingResources))</p>
                        <a href="Account/Register" class="btn btn-lg btn-block btn-outline-primary">@LocalizationService.GetLocalizedString("GetStartedFree", typeof(PricingResources))</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm h-100">
                <div class="card-header">
                    <h2 class="my-0 font-weight-normal">@LocalizationService.GetLocalizedString("ProfessionalPlanTitle", typeof(PricingResources))</h2>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="mt-3">
                        @LocalizationService.GetLocalizedString("ProfessionalPlanDescription", typeof(PricingResources))
                    </p>
                    <div class="pricing-details mt-3">
                        <div class="current-price">
                            <h3 class="card-title pricing-card-title">@LocalizationService.GetLocalizedString("ProfessionalPlanPrice", typeof(PricingResources))<small class="text-muted">@LocalizationService.GetLocalizedString("PerMonth", typeof(PricingResources))</small></h3>
                        </div>
                    </div>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>@string.Format(LocalizationService.GetLocalizedString("MaximumLevels", typeof(PricingResources)), "9")</li>
                        <li>@string.Format(LocalizationService.GetLocalizedString("MaximumFilesPerLevel", typeof(PricingResources)), LocalizationService.GetLocalizedString("Unlimited", typeof(PricingResources)))</li>
                        <li>@string.Format(LocalizationService.GetLocalizedString("MaximumFiles", typeof(PricingResources)), LocalizationService.GetLocalizedString("Unlimited", typeof(PricingResources)))</li>
                        <li>@string.Format(LocalizationService.GetLocalizedString("MaximumCharactersPerFile", typeof(PricingResources)), LocalizationService.GetLocalizedString("Unlimited", typeof(PricingResources)))</li>
                        <li>@string.Format(LocalizationService.GetLocalizedString("MaximumImage", typeof(PricingResources)), "999MB")</li>
                    </ul>
                    <div class="mt-auto">
                        <div class="alert alert-warning mb-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-gift-fill me-2"></i>
                                <span><strong>@LocalizationService.GetLocalizedString("LimitedTimeOffer", typeof(PricingResources))</strong> @LocalizationService.GetLocalizedString("OneYearFree", typeof(PricingResources))</span>
                            </div>
                        </div>
                        <a href="Account/Manage/Plan" class="btn btn-lg btn-block btn-outline-primary">@LocalizationService.GetLocalizedString("SubscribeForOneMonth", typeof(PricingResources))</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm h-100">
                <div class="card-header">
                    <h2 class="my-0 font-weight-normal">@LocalizationService.GetLocalizedString("EnterprisePlanTitle", typeof(PricingResources))</h2>
                </div>                <div class="card-body d-flex flex-column">
                    <p class="mt-3">
                        @LocalizationService.GetLocalizedString("EnterprisePlanDescription", typeof(PricingResources))
                    </p>
                    <h3 class="card-title pricing-card-title">@LocalizationService.GetLocalizedString("CustomPricing", typeof(PricingResources))</h3>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>@LocalizationService.GetLocalizedString("TailoredSolutions", typeof(PricingResources))</li>
                        <li>@LocalizationService.GetLocalizedString("PrioritySupport", typeof(PricingResources))</li>
                        <li>@LocalizationService.GetLocalizedString("CustomIntegrations", typeof(PricingResources))</li>
                        <li>@LocalizationService.GetLocalizedString("DedicatedAccountManagement", typeof(PricingResources))</li>
                    </ul>
                    <div class="mt-auto">
                        <a href="/feedback" class="btn btn-lg btn-block btn-outline-secondary">@LocalizationService.GetLocalizedString("ContactUsViaFeedback", typeof(PricingResources))</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    public async ValueTask DisposeAsync()
    {
        // Cleanup if needed
        await Task.CompletedTask;
    }
}
