@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Pinetree.Data
@using Pinetree.Shared
@using System.Security.Claims
@inject NavigationManager NavigationManager
@inject IHttpContextAccessor HttpContextAccessor
@inject UserManager<ApplicationUser> UserManager

@{
    bool isMarkdownPage = IsMarkdownPage();
}

<nav class="navbar navbar-expand-lg bg-body-tertiary bg-light @(isMarkdownPage ? "markdown-page-navbar" : "")">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="img/pinetree64.webp" alt="Pinetree logo" width="32" height="32">
            Pinetree(Beta)
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse ms-auto" id="navbarSupportedContent">
            <ul class="navbar-nav ms-auto">
                <AuthorizeView>
                    <Authorized>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/files">
                                <i class="bi bi-folder2-open"></i> Files
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/Pricing">
                                <i class="bi bi-cash-coin" aria-hidden="true"></i> Pricing
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/feedback">
                                <i class="bi bi-chat-dots" aria-hidden="true"></i> Feedback
                            </NavLink>
                        </li>

                        <!-- User Profile Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" id="profileDropdown">
                                @if (!string.IsNullOrEmpty(currentUser?.ProfileIconUrl))
                                {
                                    <img src="@currentUser.ProfileIconUrl" alt="Profile" class="rounded-circle" style="width: 32px; height: 32px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                        <i class="bi bi-person-fill text-white" style="font-size: 1rem;"></i>
                                    </div>
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow" style="right: 0; left: auto; min-width: 180px;" aria-labelledby="profileDropdown">
                                <li>
                                    <h6 class="dropdown-header">@context.User.Identity?.Name</h6>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item @(IsManagePage() ? "active" : "")" href="/Account/Manage">
                                        <i class="bi bi-person-gear" aria-hidden="true"></i> Profile
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form action="Account/Logout" method="post" class="d-inline">
                                        <AntiforgeryToken />
                                        <input type="hidden" name="ReturnUrl" value="" />
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-arrow-bar-up" aria-hidden="true"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                        <!-- Admin menu (if admin) -->
                        <AuthorizeView Roles="@Roles.Admin" Context="adminContext">
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/audit">
                                    <i class="bi bi-shield-lock" aria-hidden="true"></i> Audit Log
                                </NavLink>
                            </li>
                        </AuthorizeView>
                    </Authorized>
                    <NotAuthorized>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/play">
                                <i class="bi bi-tools"></i> Playground
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/Pricing">
                                <i class="bi bi-cash-coin" aria-hidden="true"></i> Pricing
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/feedback">
                                <i class="bi bi-chat-dots" aria-hidden="true"></i> Feedback
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="Account/Register">
                                <i class="bi bi-person" aria-hidden="true"></i> Register
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="Account/Login">
                                <i class="bi bi-person-badge" aria-hidden="true"></i> Login
                            </NavLink>
                        </li>
                    </NotAuthorized>
                </AuthorizeView>
            </ul>
        </div>
    </div>
</nav>

@code
{
    private ApplicationUser? currentUser;

    protected override async Task OnInitializedAsync()
    {
        // Get current user with profile icon
        if (HttpContextAccessor.HttpContext?.User?.Identity?.IsAuthenticated == true)
        {
            var userId = HttpContextAccessor.HttpContext.User.FindFirstValue(ClaimTypes.NameIdentifier);
            if (!string.IsNullOrEmpty(userId))
            {
                currentUser = await UserManager.FindByIdAsync(userId);
            }
        }
    }

    // TODO: Hamburger menu priority is broken on Markdown Page
    private bool IsMarkdownPage()
    {
        var path = NavigationManager.ToBaseRelativePath(NavigationManager.Uri).ToLowerInvariant();
        return path.StartsWith("play") ||
               path.StartsWith("edit/") ||
               path.StartsWith("view/");
    }

    private bool IsManagePage()
    {
        var path = NavigationManager.ToBaseRelativePath(NavigationManager.Uri).ToLowerInvariant();
        return path.StartsWith("account/manage");
    }
}
