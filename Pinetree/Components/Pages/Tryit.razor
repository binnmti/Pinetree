@page "/{UserName}/Tryit/{id:long}"

@using Pinetree.Data
@using Pinetree.Model
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using Pinetree.Components.Components
@using Pinetree.Components.Services

@inject NavigationManager Navigation
@inject ProtectedLocalStorage ProtectedLocalStore
@inject ApplicationDbContext DbContext
 
@rendermode InteractiveServer

@if (PineTree != null)
{
    <Markdown UserName="@(UserName)" PineTree="@(PineTree)" Id="@(Id)" IsTry="@(true)" FileCount=@FileCount MaxDepth=@MaxDepth />
}

@code {
    [Parameter]
    public string UserName { get; set; } = "";

    [Parameter]
    public long Id { get; set; }

    private PineTree? PineTree { get; set; }
    private int FileCount { get; set; }
    private int MaxDepth { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var hit = await DbContext.SingleIncludeChildAsync(Id);
        if (hit == null)
        {
            Navigation.NavigateTo("/");
            return;
        }
        (PineTree, FileCount, MaxDepth) = hit.ToPineTreeIncludeChild();
    }
}
