@page "/Pricing"

@using Pinetree.Components.Services

@rendermode InteractiveAuto

<h1 class="text-center my-4">Pricing Plans</h1>

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <!-- Free Plan -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h2 class="my-0 font-weight-normal">Free Plan</h2>
                </div>
                <div class="card-body">
                    <h3 class="card-title pricing-card-title">$0 <small class="text-muted">/ month</small></h3>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Maximum levels: 3</li>
                        <li>Maximum files per level: 33</li>
                        <li>Maximum characters per file: 999</li>
                    </ul>
                    <a href="Account/Register" class="btn btn-lg btn-block btn-outline-primary">Select</a>
                    <p class="mt-3">The reason this is the free plan is that this number is what the author considers the most suitable. If you want to use more than this, please use a paid plan.</p>
                </div>
            </div>
        </div>

        <!-- Professional Plan -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h2 class="my-0 font-weight-normal">Professional Plan</h2>
                </div>
                <div class="card-body">
                    <h3 class="card-title pricing-card-title">$2.99 <small class="text-muted">/ month</small></h3>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>Maximum levels: 9</li>
                        <li>Maximum files per level: 999</li>
                        <li>Maximum characters per file: 9,999</li>
                    </ul>
                    <a href="Account/Manage/Plan" class="btn btn-lg btn-block btn-outline-primary">Select</a>
                </div>
            </div>
        </div>

        <!-- Enterprise Plan -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h2 class="my-0 font-weight-normal">Enterprise Plan</h2>
                </div>
                <div class="card-body">
                    <h3 class="card-title pricing-card-title">Custom Pricing</h3>
                    <ul class="list-unstyled mt-3 mb-4">
                        <li>No current necessity</li>
                        <li>If interested, please send us an email</li>
                    </ul>
                    <button class="btn btn-lg btn-block btn-outline-secondary" @onclick="NavigateToEmail">Contact Us</button>
                </div>
            </div>
        </div>
    </div>
</div>

@code
{
    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!;
    [Inject]
    private IConfiguration Configuration { get; set; } = default!;

    private void NavigateToEmail()
    {
        var email = Configuration.GetValue<string>("SupportEmail");
        var mailto = $"mailto:{email}";
        NavigationManager.NavigateTo(mailto, forceLoad: true);
    }
}
